<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultParentLayout"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/attr_layout_normal"
                android:orientation="vertical"
                android:padding="@dimen/margin_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="실제 로또 당첨번호"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="770"
                        android:textColor="@color/yellow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=" 회 당첨결과" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="(2017년 9월 02일 추첨)" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당첨번호" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="보너스" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/attr_layout_numbers"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_real_lotto_1"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_yellow"
                        android:text="45" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_2"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_blue"
                        android:text="5" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_3"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_red"
                        android:text="6" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_4"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_green"
                        android:text="17" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_5"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_grey"
                        android:text="8" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_6"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_blue"
                        android:text="9" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/add"
                        app:srcCompat="@drawable/ic_add_black_24dp" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_bonus"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_red"
                        android:text="10" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_hour_lotto_number" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_text_one_hour_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/empty_participation_lotto_village" />

                <LinearLayout
                    android:id="@+id/main_linear_layout_one_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_one_hour_1"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_one_hour_2"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_one_hour_3"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_one_hour_4"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_one_hour_5"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_one_hour_6"
                        style="@style/DefaultLottoNumberText" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/participating_time" />

                <TextView
                    android:id="@+id/main_text_one_hour_participating_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="2017-09-03 01:41" />

                <Button
                    android:id="@+id/main_button_one_hour_apart_lotto"
                    style="@style/ParticipateButton"
                    android:onClick="customOnClick" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/six_hour_lotto_number" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_text_six_hour_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/empty_participation_lotto_village" />

                <LinearLayout
                    android:id="@+id/main_linear_layout_six_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_six_hour_1"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_six_hour_2"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_six_hour_3"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_six_hour_4"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_six_hour_5"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_six_hour_6"
                        style="@style/DefaultLottoNumberText" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/participating_time" />

                <TextView
                    android:id="@+id/main_text_six_hour_participating_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2017-09-03 01:41" />

                <Button
                    android:id="@+id/main_button_six_hour_apart_lotto"
                    style="@style/ParticipateButton"
                    android:onClick="customOnClick" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twelve_hour_lotto_number" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_text_twelve_hour_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/empty_participation_lotto_village" />

                <LinearLayout
                    android:id="@+id/main_linear_layout_twelve_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_twelve_hour_1"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_2"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_3"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_4"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_5"
                        style="@style/DefaultLottoNumberText" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_6"
                        style="@style/DefaultLottoNumberText" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/participating_time" />

                <TextView
                    android:id="@+id/main_text_twelve_hour_participating_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2017-09-03 01:41" />

                <Button
                    android:id="@+id/main_button_twelve_hour_apart_lotto"
                    style="@style/ParticipateButton"
                    android:onClick="customOnClick" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyBackground"
        app:menu="@menu/bottom_navigation" />
</LinearLayout>