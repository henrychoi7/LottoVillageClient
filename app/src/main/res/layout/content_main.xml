<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultParentLayout"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_one_hour_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_one_hour_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_one_hour_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_one_hour_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_one_hour_5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_one_hour_6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/main_button_one_hour_apart_lotto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="customOnClick"
                    android:text="@string/participate_lotto_village" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_six_hour_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_six_hour_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_six_hour_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_six_hour_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_six_hour_5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_six_hour_6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/main_button_six_hour_apart_lotto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="customOnClick"
                    android:text="@string/participate_lotto_village" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_twelve_hour_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/main_text_twelve_hour_6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/attr_lotto_number_background"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/main_button_twelve_hour_apart_lotto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="customOnClick"
                    android:text="@string/participate_lotto_village" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyBackground"
        app:menu="@menu/bottom_navigation" />
</LinearLayout>