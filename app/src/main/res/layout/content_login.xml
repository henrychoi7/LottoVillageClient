<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultParentLayout"
    android:paddingEnd="@dimen/default_layout_margin"
    android:paddingStart="@dimen/default_layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/attr_layout_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/attr_layout_normal"
            android:orientation="vertical"
            android:padding="20dp">

            <com.jjosft.android.lottovillage.base.ClearEditText
                android:id="@+id/edit_name"
                style="@style/DefaultEditText"
                android:hint="@string/nick_name"
                android:inputType="text" />

            <com.jjosft.android.lottovillage.base.PasswordEditText
                android:id="@+id/edit_password"
                style="@style/DefaultEditText"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button_login"
                style="@style/ConfirmButton"
                android:onClick="customOnClick"
                android:text="@string/login" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>