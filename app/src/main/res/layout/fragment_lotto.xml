<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DefaultParentLayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/attr_layout_normal"
                android:orientation="vertical"
                android:padding="@dimen/margin_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="실제 로또 당첨번호" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="770"
                        android:textColor="@color/yellow"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 회 당첨결과"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="(2017년 9월 02일 추첨)" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당첨번호" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="보너스" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/attr_layout_numbers"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_text_real_lotto_1"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_yellow"
                        android:text="45" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_2"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_blue"
                        android:text="5" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_3"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_red"
                        android:text="6" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_4"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_green"
                        android:text="17" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_5"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_grey"
                        android:text="8" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_6"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_blue"
                        android:text="9" />

                    <ImageView
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/add" />

                    <TextView
                        android:id="@+id/main_text_real_lotto_bonus"
                        style="@style/DefaultLottoNumberText"
                        android:background="@drawable/attr_lotto_number_background_red"
                        android:text="10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>